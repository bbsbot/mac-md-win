{
  "type": "object",
  "properties": {
    "verdict": {
      "type": "string",
      "enum": ["CODE_ACCEPTABLE", "SUGGESTIONS"]
    },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "area": {
            "type": "string",
            "enum": ["security", "performance", "architecture", "correctness", "best_practices"]
          },
          "issue": { "type": "string" },
          "suggestion": { "type": "string" },
          "reason": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 100 },
          "impact_percent": { "type": "number", "minimum": 0 }
        },
        "required": ["area", "issue", "suggestion", "reason", "confidence", "impact_percent"],
        "additionalProperties": false
      }
    }
  },
  "required": ["verdict", "suggestions"],
  "additionalProperties": false
}
