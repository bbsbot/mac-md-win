<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="MacMD.Win.Views.EditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MacMD.Win.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formatting Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="2"
                    Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Button Click="OnBoldClick" ToolTipService.ToolTip="Bold (Ctrl+B)"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE8DD;"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnItalicClick" ToolTipService.ToolTip="Italic (Ctrl+I)"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE8DB;"
                    Padding="8,4" MinWidth="32"/>
            <Border Width="1" Height="20" Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                    Margin="4,0"/>
            <Button Click="OnHeadingClick" ToolTipService.ToolTip="Heading"
                    Content="H" FontWeight="Bold"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnLinkClick" ToolTipService.ToolTip="Link"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE71B;"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnCodeClick" ToolTipService.ToolTip="Code"
                    Content="&lt;/&gt;" FontFamily="Cascadia Code,Consolas" FontSize="11"
                    Padding="8,4" MinWidth="32"/>
            <Border Width="1" Height="20" Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                    Margin="4,0"/>
            <Button Click="OnBulletListClick" ToolTipService.ToolTip="Bullet list"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE8FD;"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnNumberedListClick" ToolTipService.ToolTip="Numbered list"
                    Content="1." FontWeight="Bold" FontSize="12"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnQuoteClick" ToolTipService.ToolTip="Blockquote"
                    Content="&#x201C;" FontSize="18" FontWeight="Bold"
                    Padding="8,4" MinWidth="32"/>
            <Button Click="OnHrClick" ToolTipService.ToolTip="Horizontal rule"
                    Content="â€”" FontSize="14"
                    Padding="8,4" MinWidth="32"/>
        </StackPanel>

        <TextBox
            Grid.Row="1"
            x:Name="MarkdownTextBox"
            Text="{x:Bind ViewModel.MarkdownText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            PlaceholderText="Start writing Markdown here..."
            BorderThickness="0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Padding="12"/>
    </Grid>
</UserControl>
